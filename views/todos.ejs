<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <h1>Todo List</h1>
    <a href="/logout">Logout</a>

    <form action="/todos/createTodo" method='POST'>
      <input type="text" placeholder="Enter to do Item" name='todoItem'>
      <input type="date" placeholder="Due date" name="dueDate">
      <input type="submit">
  </form>
    <h2>Welcome back, <%= user.userName %>!</h2>
    <div>
      <h2>To Do</h2>
      <ul>
      <% todos.filter( el => el.completed !== true ).forEach( el => { %>
              <li class='todoItem' data-id='<%=el._id%>'>
                <input type="checkbox" class='<%= el.completed === true ? 'completed' : 'not'%>'>
                <span><%= el.todo %> - <%= `${el.dueDate.getMonth()+1}/${el.dueDate.getDate()+1}/${el.dueDate.getFullYear()}` %>
                <span class='del'> üóëÔ∏è </span></span>
              </li>
      <% }) %>    
      </ul>
    </div>
    
    <div>
      <h2>Completed</h2>
      <ul>
      <% todos.filter( el => el.completed === true).forEach( el => { %>
              <li class='todoItemCompleted' data-id='<%=el._id%>'>
                <input type="checkbox" class='<%= el.completed === true ? 'completed' : 'not'%>'>  
                <span class='<%= el.completed === true ? 'completed' : 'not'%>'><%= el.todo %>
                  <span class='del'> üóëÔ∏è </span></span>
              </li>
      <% }) %>    
      </ul>
    </div>

    

    <script src="js/main.js"></script>
</body>
</html>